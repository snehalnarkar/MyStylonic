<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.ProfileActivity">
    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent" android:layout_height="57dp"
            android:background="@color/purple_700"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/backarrow"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_baseline_arrow_back"
                    android:layout_gravity="center"
            />
            <TextView android:layout_width="200dp"
                      android:layout_height="40dp"
                      android:id="@+id/cartTitle"
                      android:text="My Profile"
                      android:textStyle="bold"
                      android:textSize="25sp"
                      android:textColor="@color/white"
                      android:layout_marginTop="10dp"
                      android:layout_marginLeft="50dp"
                      android:fontFamily="serif"/>

        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <ImageView android:layout_width="match_parent"
               android:layout_height="200dp"
               android:src="@drawable/profile"
               tools:layout_editor_absoluteX="-16dp"
               app:layout_constraintTop_toBottomOf="@+id/toolbar" android:id="@+id/imageView2"/>

    <EditText android:layout_width="321dp" android:layout_height="59dp"
              android:id="@+id/profilename"
              android:hint=" Name"
              android:padding="15dp"
              android:elevation="3dp"
              android:layout_marginLeft="20dp"
              android:drawableStart="@drawable/ic_baseline_person2_24"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/imageView2"
              android:layout_marginTop="40dp" app:layout_constraintHorizontal_bias="0.333"/>
    <EditText android:layout_width="321dp" android:layout_height="59dp"
              android:id="@+id/profileemail"
              android:hint="Email Id"
              android:padding="15dp"
              android:elevation="3dp"
              android:layout_marginLeft="20dp"
              android:drawableStart="@drawable/ic_baseline_email2_24"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/imageView2"

              android:layout_marginTop="116dp"
              app:layout_constraintHorizontal_bias="0.322"/>
    <EditText android:layout_width="321dp"
              android:layout_height="59dp"
              android:id="@+id/profileaddress"
              android:hint=" Address"
              android:drawableStart="@drawable/ic_baseline_location_on_24"
              android:padding="15dp"
              android:elevation="3dp"
              android:layout_marginLeft="20dp"
              app:layout_constraintTop_toBottomOf="@+id/profileemail"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintHorizontal_bias="0.355"
              app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="20dp"/>
    <Button android:layout_width="150dp" android:layout_height="60dp"
            android:id="@+id/btnprofile"
            android:text="Update"
            android:textStyle="bold"
            android:fontFamily="serif"
            app:layout_constraintTop_toBottomOf="@+id/profileaddress"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.143"/>
</androidx.constraintlayout.widget.ConstraintLayout>