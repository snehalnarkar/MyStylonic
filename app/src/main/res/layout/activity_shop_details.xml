<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.ShopDetailsActivity">
    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent" android:layout_height="57dp"
            android:background="@color/purple_700"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
    <ImageView
            android:id="@+id/backarrow"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_arrow_back"
            android:layout_gravity="center"
    />
        <TextView android:layout_width="200dp"
                  android:layout_height="40dp"
                  android:id="@+id/cartTitle"
                  android:text="Details"
                  android:textStyle="bold"
                  android:textSize="25sp"
                  android:textColor="@color/white"
                  android:layout_marginTop="10dp"
                  android:layout_marginLeft="50dp"
                  android:fontFamily="serif"/>
    </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="60dp"
            tools:context=".activity.ShopDetailsActivity">

        <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="16dp"
                android:padding="16dp"
                android:text="@string/babiva_fashion"
                android:textSize="23sp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" android:layout_alignParentEnd="true"
                android:layout_marginEnd="-1dp" android:layout_alignParentStart="true"
                android:layout_marginStart="1dp"/>
        <ImageView
                android:id="@+id/det_image"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/w_dress4"
                android:layout_below="@+id/title"
                android:padding="12dp" tools:ignore="MissingConstraints"/>

        <TextView
                android:id="@+id/det_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dress1"
                android:textSize="20sp"
                android:padding="10dp"
                android:layout_marginTop="36dp"
                android:layout_below="@+id/det_image"
                android:textColor="@color/black"
                tools:ignore="MissingConstraints"/>
        <TextView
                android:id="@+id/det_size"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="S,M,L"
                android:textSize="23sp"
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="310dp"
                android:padding="10dp"/>
        <TextView
                android:id="@+id/det_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹519 "
                android:textSize="23sp"
                android:textColor="@color/teal_700"
                android:textStyle="bold"
                android:layout_marginTop="310dp"
                android:layout_marginLeft="250dp"
                android:padding="10dp"/>

        <Button
                android:id="@+id/btn_add_to_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add to Cart"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:layout_below="@id/det_detail"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="50dp"/>
        <Button
                android:id="@+id/btn_buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buy Now"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:layout_below="@id/det_detail"
                android:layout_marginTop="80dp"
                android:layout_marginStart="230dp"/>


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
